<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <com.dankegongyu.fitviewdemo.ScaledHeightImageView
        android:layout_width="1080px"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/bg_guide1"
        android:visibility="gone"
        app:original_height="1080"
        app:original_width="720" />

    <com.dankegongyu.fitviewdemo.ScaledHeightImageView
        android:layout_width="540px"
        android:layout_height="100px"
        android:layout_centerVertical="true"
        android:src="@drawable/cleaning_home_top"
        android:visibility="visible"
        app:original_height="441"
        app:original_width="750" />

    <com.dankegongyu.fitviewdemo.ScaledHeightImageView
        android:layout_width="540px"
        android:layout_height="100px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/cleaning_home_top"
        android:visibility="visible"
        app:original_height="441"
        app:original_width="750" />

</RelativeLayout>